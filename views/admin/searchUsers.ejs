</head>

<body>
<div class="container-fluid pt-5 col-12">
    <div class="row px-xl-5">
        <div class="col-lg-12 table-responsive mb-5"> <!-- Set col-12 for full width -->
            <table class="table table-bordered mb-5 col-12">
                <thead>
                    <tr>
                        <!-- <th scope="col">Day</th> -->
                        <th scope="col">Username</th>
                        <th scope="col">Email</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (searchResults.length === 0) { %>
                        <tr>
                            <td colspan="3">No users found.</td>
                        </tr>
                    <% } else { %>
                        <% searchResults.forEach(user => { %>
                            <tr>
                                <!-- <th scope="row">1</th> -->
                                <!-- <td class="w-25">
                                    <img src="/admin/api/product/<%=product._id%>/0" alt="<%= product.title %>" />
                                </td> -->
                                <td><%= user.username %></td>
                                <td><%= user.email %></td>
                                <td><a href="/admin/update/user/<%= user._id %>" class="btn btn-primary">To block</a></td>
                            </tr>
                        <% }); %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

