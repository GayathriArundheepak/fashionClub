  <!-- Customized Bootstrap Stylesheet -->
  <link href="/css/style.css" rel="stylesheet">
                
  <img src="/images/logoFashionClub.png" alt="logoFashionClub" style="width: 100%; max-width: 300px"><br>

<!-- Rest of your HTML content -->
<div class="col-lg-12 col-6 text-left pt-5">
  <h5>Customers</h5>
  <br>
  <form action="/admin/search" method="GET">
    <div class="input-group">
        <input type="text" class="form-control" placeholder="Search for user" name="query">
        <div class="input-group-append">
          
           <button type="submit"><span class="input-group-text bg-transparent text-primary  btn" ></span>  <i class="fa fa-search"></i></button> 

            </span>
        </div>
    </div>
</form>

</div>
<br>
<div class="user-list">

    <table class="table table-striped">
        <thead>
          <tr>
            <!-- <th scope="col">#</th> -->
            <th scope="col">username</th>
            <th scope="col">email</th>
            <th scope="col">User Id</th>
            <th scope="col">status</th>
          </tr>
        </thead>
        <tbody>
            <% user.forEach(user => { %>
      
          <tr>
            <!-- <th scope="row">1</th> -->
            <td name="user"><%= user.username %></td>
            <td name="email"><%= user.email %></td>
            <td name="_id"><%= user._id %></td>
            <td type="submit"><a href="/admin/update/user/<%=user._id%>">To block</a></td>
           
          </tr>
          <% }); %>
        </tbody>
      </table>
       <!-- Pagination -->
<nav aria-label="Page navigation example">
  <ul class="pagination">
    <% if (page > 1) { %>
      <li class="page-item">
        <a class="page-link" href="?page=<%= page - 1 %>" tabindex="-1" aria-disabled="true">Previous</a>
      </li>
    <% } %>

    <% for (let i = 1; i <= totalPages; i++) { %>
      <li class="page-item <%= i === page ? 'active' : '' %>">
        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
      </li>
    <% } %>

    <% if (page < totalPages) { %>
      <li class="page-item">
        <a class="page-link" href="?page=<%= page + 1 %>">Next</a>
      </li>
    <% } %>
  </ul>
</nav>
<!-- End Pagination -->
</div>
