<body>

  <div class="col-md-6 offset-md-3 mt-5 pt-5">
  <h1>User BlockPage</h1>
  
  <p>Username: <%= user.username %></p>
  <p>Email: <%= user.email %></p>

 
        <% if (!user.isBlocked) { %>
          <form action="/admin/update/<%=user._id %>/block" method="POST">
            <label for="reason">Reason for Blocking:</label>
            <textarea id="reason" name="reason" rows="4"   class="form-control" cols="50" required></textarea>
            <br>
            <button type="submit" class="btn btn-success"  class="form-control" >Block User</button>
          </form>
          <% } else { %>
            <form action="/admin/update/unblock/<%= user._id %>" method="POST">
              <label for="reason">Reason for Blocking:</label>
              <textarea id="reason" name="reason" rows="4" cols="50"  class="form-control" required></textarea>
              <br>
              <button type="submit" class="btn btn-success">Unblock User</button>
            <% } %>
    </div>
 
