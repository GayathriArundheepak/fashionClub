<%- include('../layout/header.ejs') %>
<title>Your Wishlist</title>
</head>
<body>
    
    <%- include('./userpartials/Topbar.ejs') %>
    <%- include('./userpartials/Navbar.ejs') %>
    
    <div class="container-fluid pt-5">
        <div class="row px-xl-5">
            <% if (!wishlist || wishlist.items.length === 0) { %>
                <p>Your wishlist is empty.</p>
                <% } else { %>
                    <% wishlist.items.forEach(wishlistItem => { %>
                        <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                    <form action="/cart/wishlist/remove/<%=wishlistItem._id %>" method="POST">
                        <button class="btn btn-sm btn-primary  remove-form"  type="submit"><i
                                class="fa fa-times"></i></button>
                    </form>
                    <div class="card product-item border-0 mb-4">
                        <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                            <img class="img-fluid w-100" src="<%= wishlistItem.productId.images[0] %>" alt="">
                        </div>
                        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                            <h6 class="text-truncate mb-3"><%= wishlistItem.productId.title %></h6>
                            <div class="d-flex justify-content-center">
                                <h6><%= wishlistItem.productId.price %></h6>
                                <h6 class="text-muted ml-2"><del>$5000</del></h6>
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-between bg-light border">
                            <a href="/productDtailes/<%= wishlistItem.productId._id %>"
                                class="btn btn-sm text-dark p-0"><i class="fas fa-eye  mr-1"></i>View Detail</a>
                            <a href="/cart/add-to-cart/<%= wishlistItem.productId._id %>" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } %>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>

</body>
</html>
